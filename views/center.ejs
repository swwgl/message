<!DOCTYPE html>
<html lang='zh-cn'>

<head>
  <meta charset='utf-8'>
  <meta http-equiv='X-UA-Compatible' content='IE=edge'>
  <meta name='viewport' content='width=device-width, initial-scale=1'>
  <title></title>

  <!-- Bootstrap -->
  <link href='/css/bootstrap.css' rel='stylesheet'>
  <style>
    body {
      background-color: #505050;
    }

    h1 {
      color: white;
      font-size: 50px;
      font-weight: bold;
    }

    .box {
      display: flex;
      justify-content: center;
      align-items: center;
      width: 100%;
      height: 400px;
      background-color: #aaa;
      margin-top: 100px;
    }

    .userinfo {
      width: 400px;
      margin-top: -249px;
      /* background-color: #cc0; */
    }

    .userinfo .left {
      float: left;
    }

    .userinfo .right {
      float: right;
      width: 300px;
      height: 100px;
      font-size: 18px;
      color: white;
      display: flex;
      flex-direction: column;
      justify-content: space-around;
    }

    a {
      color: yellow;
      text-decoration: none;
    }

    a:hover {
      color: blue
    }
  </style>
  <!-- [if lt IE 9]>
  <script src='/js/html5shiv.min.js'></script>
  <script src='/js/respond.min.js'></script>
  <![endif] -->
</head>

<body>
  <h1 class="text-center" color="white">个人中心</h1>
  <div class="nav text-right">
    <a href="/">返回首页</a>
    <a href="/user/logout">退出登录</a>
  </div>
  <div class="box">
    <div class="userinfo">
      <div class="left">
        <a href="/user/upload"><img src="<%= user.avatar %>" width="100px" height="100px"></a>
      </div>
      <div class="right">
        <div class="username">
          <span class="label">用户名:</span>
          <span><%= user.username %></span>
        </div>
        <div class="nickname">
          <span class="label">昵称:</span>
          <span><%= user.nickname %></span>
          <a href="javascript:;" onclick="mod(this,'<%= user.username %>')">修改昵称</a>
        </div>
        <div class="text-right">
          <a href="/user/changePwd">修改密码</a>
        </div>
      </div>
    </div>
  </div>
  <script src='/js/jquery.min.js'></script>
  <script src='/js/bootstrap.js'></script>
  <script>
    var oldNick = "";

    function mod(ele) {
      var $con = $(ele).prev();
      oldNick = $con.html();
      var $input = $(
        "<input type='text' class='form-control' value='<%= user.nickname %>' onblur='send()'>");
      $con.html($input);
      $input.focus();
    }

    function send() {
      var newNick = event.target.value.trim();
      var f = confirm("确定修改昵称?");
      var $con = $(event.target).parent();
      if (newNick == "" || !f) {
        $con.html(oldNick);
        return;
      }
      // 修改昵称
      $.ajax({
        url: '/user/change/' + newNick,
        success: function (result) {
          if (result.status == 1) {
            alert("修改失败");
            $con.html("<%= user.nickname %>");
            return;
          }
          // 成功
          alert("修改成功");
          $con.html(newNick);
        }
      })



    }
  </script>
</body>

</html>